<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ns.controller.SimulationController">
    <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <HBox alignment="CENTER_RIGHT" layoutX="189.0" layoutY="40.0" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="14.0" />
        </VBox.margin>
        <Pane fx:id="pane" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <Canvas fx:id="canvas" />
        </Pane>
        <Separator orientation="VERTICAL" prefHeight="200.0">
           <HBox.margin>
               <Insets right="14.0" />
           </HBox.margin>
        </Separator>
        <GridPane maxWidth="200.0" prefWidth="200.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints percentHeight="0.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Starting population" GridPane.rowIndex="2"/>
            <Slider GridPane.columnIndex="1" GridPane.rowIndex="2" onMouseReleased="#onSliderChanged2"/>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Options" GridPane.columnSpan="2"
                   GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <Label text="Starting resources" GridPane.rowIndex="4"/>
            <Slider GridPane.columnIndex="1" GridPane.rowIndex="4" onMouseReleased="#onSliderChanged1"/>
            <Label alignment="BOTTOM_CENTER" contentDisplay="CENTER" text="Options" GridPane.columnSpan="2"
                   GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <VBox spacing="10.0" GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER">
                <Button mnemonicParsing="false" text="Reset" onAction="#onResetButtonClick">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="startStopButton" mnemonicParsing="false" text="Start" onAction="#onStopStartButtonClick">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </VBox>
        </GridPane>
    </HBox>
   <padding>
      <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
   </padding>
</VBox>
